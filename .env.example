# ===========================================
# Grocery POS - Environment Configuration
# ===========================================
# Copy this file to .env and update values for your environment
# Never commit .env files with actual secrets to version control

# -------------------------------------------
# Application Settings
# -------------------------------------------

# Application name (displayed in UI)
VITE_APP_NAME=Grocery POS

# Environment: development | staging | production
VITE_APP_ENV=production

# Base URL for the application (usually / for root deployment)
VITE_APP_BASE_URL=/

# Primary currency code (ISO 4217)
VITE_CURRENCY=LKR

# -------------------------------------------
# Backup Configuration
# -------------------------------------------

# Backup provider: local | google_drive | onedrive | s3 | backblaze
VITE_BACKUP_PROVIDER=local

# Local backup directory (for local provider)
VITE_BACKUP_LOCAL_DIR=./backups

# Encryption key for backups (REQUIRED - generate with: openssl rand -hex 32)
VITE_BACKUP_ENCRYPTION_KEY=

# S3-Compatible Storage Settings (for s3/backblaze providers)
VITE_BACKUP_S3_ENDPOINT=
VITE_BACKUP_S3_BUCKET=
VITE_BACKUP_S3_REGION=
VITE_BACKUP_S3_ACCESS_KEY=
VITE_BACKUP_S3_SECRET_KEY=

# -------------------------------------------
# Telemetry & Analytics
# -------------------------------------------

# Enable anonymous usage analytics (true/false)
VITE_TELEMETRY_ENABLED=false

# -------------------------------------------
# Hardware Integration
# -------------------------------------------

# Manager PIN for sensitive operations (4-6 digits)
VITE_MANAGER_PIN=1234

# -------------------------------------------
# Performance Settings
# -------------------------------------------

# Maximum records per page
VITE_MAX_RECORDS_PER_PAGE=200

# Enable service worker for offline capabilities
VITE_SERVICE_WORKER_ENABLED=true
