# Environment Configuration
NODE_ENV=development
PORT=8250
DB_PATH=./data/pos.db
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5175
LOG_LEVEL=info

# Fast Development Mode (for faster startup)
FAST_DEV=false
SKIP_MIGRATIONS=false
SKIP_HARDWARE_CHECKS=false

# Rate Limiting Configuration
RATE_LIMIT_RPM=60
RATE_LIMIT_BURST=10
RATE_LIMIT_WINDOW_MS=60000

# Body Size Limits (in MB)
JSON_LIMIT_MB=2
URL_ENCODED_LIMIT_MB=1

# Nginx Configuration (for reference)
NGINX_CLIENT_MAX_BODY_SIZE=2m
NGINX_RATE_LIMIT_RPM=60
NGINX_RATE_LIMIT_BURST=10

